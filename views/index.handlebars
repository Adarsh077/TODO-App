<div class="mt-2 d-none d-md-block"></div>
<div class="container-30 ">
	<div class="card shadow rounded-top-lg">
		<div class="card-img-top rounded-top-lg d-flex">
			<a href="#" class="fas fa-expand"></a>
			<div class="align-self-end px-2 py-1 text-light date">
				Thursday, May 30
			</div>
		</div>
		<div class="card-body">
			<div class="todo pending p-3">
				{{#if data}}
				{{#each data}}
				<form class="item mb-3" method="POST" action="/index/{{_id}}?_method=DELETE">
					<input type="hidden" name="_method" value="DELETE">
					<p class="d-inline ml-2">{{todo}}</p>
					<button type="submit" class="far fa-check-circle delete"></button>
				</form>
				{{/each}}
				{{/if}}
			</div>
			<div class="mt-5"></div>
			<form action="/index" class="input-todo-item d-flex w-100 py-2 pl-4 bg-light" method="POST">
				<input type="text" name="todo" id="input" placeholder="Add a TODO" autofocus autocomplete="off">
				<button type="submit" hidden></button>
			</form>
		</div>
	</div>
</div>

<script>
	document.querySelector('.fa-expand').addEventListener('click', (ele) => {
		var elem = document.querySelector("html");
		if (elem.requestFullscreen) {
			elem.requestFullscreen();
		} else if (elem.msRequestFullscreen) {
			elem.msRequestFullscreen();
		} else if (elem.mozRequestFullScreen) {
			elem.mozRequestFullScreen();
		} else if (elem.webkitRequestFullscreen) {
			elem.webkitRequestFullscreen();
		}
	})

	// Date
	document.querySelector('.date').innerHTML = new Date().toUTCString().slice(0, -18);
</script>